<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".MainActivity"
    android:id="@+id/playing_song_view">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/image2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="170dp"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/song_Name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/song_Artist"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:padding="15dp">

       <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#00000000"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/ic_btn_prev"
            android:tint="@color/colorGrey" />

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="#00000000"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/ic_btn_play"
            android:tint="@color/colorGrey" />

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="#00000000"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/ic_btn_next"
            android:tint="@color/colorGrey" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="80dp"
    android:gravity="center_horizontal"
    android:padding="15dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_time_song"
        android:foregroundGravity="center_vertical"
        android:textSize="24sp"
        android:textColor = "@color/colorYellow"
        tools:text="00:00"
             />
    <SeekBar
        android:id = "@+id/song_progress_seekbar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:foregroundGravity="center_vertical"
        android:layout_weight = "1"
        android:max = "100"
        android:background="@null"
        android:progress="0"

        ></SeekBar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/last_duration_song"
        android:foregroundGravity="center_vertical"
        android:textSize="24sp"
        android:textColor="@color/colorYellow"
        tools:text="00:00"

        />
    </LinearLayout>
</RelativeLayout>